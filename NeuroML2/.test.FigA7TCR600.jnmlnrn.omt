# Script for running automated tests on OSB using Travis-CI, see https://github.com/OpenSourceBrain/osb-model-validation

target: Cell13-TCR-FigA7-600/Cell13-TCR-FigA7-600_default/LEMS_Target.xml 
engine: jNeuroML_NEURON

mep: ./.test.TCRFigA7_600.mep
experiments:
  TCRFigA7_600:
    observables:
      spike times:
        file: 
          path: Cell13-TCR-FigA7-600/Cell13-TCR-FigA7-600_default/Sim_Target.CGTCR.v.dat
          columns: [0,1]
          scaling: [1, 1]
        spike detection: 
          method: threshold
          threshold: -0.02
        tolerance: 0.001
